<Window x:Class="BrowserSelector.ClipboardNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Width="380"
        SizeToContent="Height"
        WindowStartupLocation="Manual">

    <Border x:Name="MainBorder"
            Background="#F5202024"
            BorderBrush="#3CFFFFFF"
            BorderThickness="1"
            CornerRadius="12"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="16" ShadowDepth="2" Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Status -->
                <RowDefinition Height="Auto"/> <!-- URL -->
                <RowDefinition Height="Auto"/> <!-- Match Info -->
                <RowDefinition Height="Auto"/> <!-- Browser Info -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
                <RowDefinition Height="Auto"/> <!-- Progress bar -->
            </Grid.RowDefinitions>

            <!-- Header with icon, title and close button -->
            <Grid Grid.Row="0" Margin="14,12,12,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Width="20" Height="20"
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"
                       Source="pack://application:,,,/Assets/Icons/favicon-32x32.png"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Grid.Column="1"
                           Text="LinkRouter"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button x:Name="CloseButton" Grid.Column="2"
                        Content="&#x2715;"
                        Width="24" Height="24"
                        FontSize="11"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3CFFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#64FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Status line -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,4,16,2">
                <TextBlock Text="&#x1F4CB;" FontSize="12" Margin="0,0,6,0"/>
                <TextBlock Text="URL copied to clipboard"
                           FontSize="12"
                           Foreground="#64B5F6"/>
            </StackPanel>

            <!-- URL display -->
            <TextBlock x:Name="UrlText" Grid.Row="2"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#64B5F6"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       Margin="16,4,16,4"/>

            <!-- Match info -->
            <TextBlock x:Name="MatchInfoText" Grid.Row="3"
                       FontSize="11"
                       Foreground="#B4B4B4"
                       TextWrapping="Wrap"
                       Margin="16,2,16,2"/>

            <!-- Browser info -->
            <TextBlock x:Name="BrowserInfoText" Grid.Row="4"
                       FontSize="11"
                       Foreground="#B4B4B4"
                       TextWrapping="Wrap"
                       Margin="16,2,16,12"/>

            <!-- Action buttons -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="16,4,16,14">

                <!-- Don't show again button -->
                <Button x:Name="DontShowAgainButton"
                        Content="Don't show again"
                        FontSize="12"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Click="DontShowAgainButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="Transparent"
                                                BorderBrush="#808080"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12,6,12,6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#B4B4B4"/>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Open button -->
                <Button x:Name="OpenButton"
                        Content="Open"
                        FontSize="12"
                        Cursor="Hand"
                        Click="OpenButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#0078D4"
                                                CornerRadius="4"
                                                Padding="16,6,16,6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#0067B8"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Progress bar (hidden by default) -->
            <Border Grid.Row="6"
                    Background="#28FFFFFF"
                    Height="4"
                    CornerRadius="2"
                    HorizontalAlignment="Stretch"
                    Margin="16,8,16,16"
                    ClipToBounds="True"
                    Visibility="Collapsed">
                <Border x:Name="ProgressBar"
                        Background="#0078D4"
                        Height="4"
                        Width="348"
                        HorizontalAlignment="Left"
                        CornerRadius="2"/>
            </Border>
        </Grid>
    </Border>
</Window>
